<div class="container mt-5 mb-5">
	<div class="row">
		{{#each data}}
		<h4 style="margin-left: 18%;">{{this.discription}}</h4>
		{{/each}}

	</div>

</div>


<div class="container mt-5">
	<div class="row">
		<div class="col-md-6 mt-5">
			<div class="card" style="width: 38rem;">
				{{#each data}}
				<img class="card-img-top img-fluid" src="/images/{{this.img}}" width="100%" alt="Card image cap">
				{{/each}}

			</div>

		</div>


		 <div class="col-md-6 mt-5">
      {{#each data}}
      <h4 class="text-success " style="margin-left: 25%;">US {{this.price}}</h4>
      {{/each}}
      
      <p style="margin-left: 25%;">Pledged of US <strong>{{#each pledged}}{{this}}{{/each}}</strong> goal</p>
      
      <h4 class=" mt-5 " style="margin-left: 27%;"><strong>
          {{count}}</strong></h4>
        
      <p style="margin-left: 25%;"> backers</p>
      <div>
        
      </div>
      <h4 class=" mt-5 " style="margin-left: 27%;"><strong>{{countDown}}</strong></h4>
      <p style="margin-left: 25%;"> days to go</p>
      {{#each data}}
      <form action="/address_page" method="post">
      <input type="hidden" value="{{this._id}}" name="id">
      <button type="submit" style="margin-left: 25%;" class="btn btn-success">pre-order</button>
      </form>
      <form action="/back_page" method="post" >
      <input type="hidden" value="{{this._id}}" name="id">
      <button type="submit" style="margin-left: 25%;" class="btn btn-info mt-5">Back this project</button>
      </form>
      {{/each}}




		</div>
	</div>
</div>
<div class="container mt-3">
	<div class="row bg-secondary">
		<nav class="navbar navbar-expand-lg navbar-light ">
			{{#each data}}
			<a class="nav-item nav-link" style="color: black;" href="/items/{{this._id}}">Discription</a>
			<a class="nav-item nav-link" style="color:black;" href="/comments/{{this._id}}">Comments</a>
			<a class="nav-item nav-link" style="color: black;" href="#"></a>
			{{/each}}

		</nav>

	</div>

</div>
<div class="container">

	<div class="row">

		<div class="col-md-4">
			{{#each data}}

			<table class="table " style="">
				<thead>
					<tr>
						<th scope="col">Comments</th>

					</tr>
				</thead>
				<tbody>
					{{#each comments}}
					<tr>

						<td>{{this}}</td>


					</tr>
					{{/each}}
					<tr>

					</tr>
				</tbody>
			</table>







			{{/each}}
		</div>

		<div class="col-md-4">

			{{#each data}}
			<table class="table" style="">
				<thead>
					<tr>
						<th class="col">Username</th>

					</tr>
				</thead>

				<tbody>
					{{#each username}}
					<tr>
						<td>{{this}}</td>
					</tr>
					{{/each}}

				</tbody>
				{{/each}}
			</table>


		</div>

		<div class="col-md-4">
			{{#each data}}

			<table class="table " style="">
				<thead>
					<tr>
						<th scope="col">Date</th>

					</tr>
				</thead>
				<tbody>
					{{#each Date}}
					<tr>

						<td>{{this}}</td>

					</tr>
					{{/each}}
				</tbody>
			</table>
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12">

			<form method="POST" action="/comments">

				<div class="form-group">

					<div class="form-group">
						<label for="exampleInputEmail1">Username</label>
						<input type="text" class="form-control" name="username" id="exampleInputEmail1"
							aria-describedby="emailHelp" placeholder="Enter username">

					</div>
					<label for="comment">Comment:</label>
					<textarea class="form-control" name="comment" rows="5" id="comment"></textarea>
					{{#each data}}
					<input type="hidden" value="{{this._id}}" name="_id">
					{{/each}}
				</div>
				<button type="submit"  class="btn btn-info mt-5">Comment</button>
			</form>
		</div>
	</div>
</div>