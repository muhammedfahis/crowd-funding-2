<div class="container mt-5 mb-5">
  <div class="row">
    {{#each data}}
    <h4 style="margin-left: 18%;">{{this.discription}}</h4>
    {{/each}}

  </div>

</div>


<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mt-5">
      <div class="card" style="width: 38rem;">
        {{#each data}}
        <img class="card-img-top img-fluid" src="/images/{{this.img}}" width="100%" alt="Card image cap">

        {{/each}}

      </div>

    </div>


    <div class="col-md-6 mt-5">
      {{#each data}}
      <h4 class="text-success " style="margin-left: 25%;">US {{this.price}}</h4>
      {{/each}}
      
      <p style="margin-left: 25%;"> pledged of US {{#each pledged}}{{this}}{{/each}} goal</p>
      
      <h4 class=" mt-5 " style="margin-left: 27%;"><strong>
          {{count}}</strong></h4>
        
      <p style="margin-left: 25%;"> backers</p>
      <div>
        
      </div>
      <h4 class=" mt-5 " style="margin-left: 27%;"><strong>{{countDown}}</strong></h4>
      <p style="margin-left: 25%;"> days to go</p>
      {{#each data}}
      <form action="/users/address_page" method="post">
      <input type="hidden" value="{{this._id}}" name="id">
      <button type="submit" style="margin-left: 25%;" class="btn btn-success">pre-order</button>
      </form>
      <form action="/users/back_page" method="post" >
      <input type="hidden" value="{{this._id}}" name="id">
      <button type="submit" style="margin-left: 25%;" class="btn btn-success mt-5">Back this project</button>
      </form>
      {{/each}}




    </div>
  </div>
</div>
<div class="container mt-3">
  <div class="row bg-secondary">
    <nav class="navbar navbar-expand-lg navbar-light ">
      {{#each data}}
      <a class="nav-item nav-link" style="color: black;" href="">Discription</a>
      <a class="nav-item nav-link" style="color:black;" href="/users/comments/{{this._id}}">Comments</a>
      <a class="nav-item nav-link" style="color: black;" href="#"></a>
      {{/each}}

    </nav>

  </div>

</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      {{#each data}}
      <p>{{this.details}}</p>
      {{/each}}
    </div>

  </div>
</div>
<div class="container mt-5">
  <div class="row" style="margin-left: 10%;">
    <div class="col-md-12">
      {{#each data}}
      <iframe src="/images/{{this.video}}" frameborder="0" style="width: 25rem;height:25rem"></iframe>
      {{/each}}
    </div>
  </div>
</div>

